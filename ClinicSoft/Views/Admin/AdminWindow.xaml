<Window x:Class="ClinicSoft.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClinicSoft — Администратор" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        FontFamily="Segoe UI" FontSize="14">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="0,12,12,0">
            <StackPanel Margin="16">
                <TextBlock Text="Админ-панель" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#2E7D32" 
                           Margin="0,0,0,24"/>

                <Button x:Name="BtnDashboard" 
                        Content="Главная" 
                        Height="40" 
                        Margin="0,0,0,8"
                        Click="BtnDashboard_Click"/>
                <Button x:Name="BtnPatients" 
                        Content="Пациенты" 
                        Height="40" 
                        Margin="0,0,0,8"
                        Click="BtnPatients_Click"/>
                <Button x:Name="BtnAppointments" 
                        Content="Записи на приём" 
                        Height="40" 
                        Margin="0,0,0,8"
                        Click="BtnAppointments_Click"/>
                <Button x:Name="BtnReference" 
                        Content="Справочники" 
                        Height="40" 
                        Margin="0,0,0,8"
                        Click="BtnReference_Click"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="12,0,0,12" 
                Margin="16">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>