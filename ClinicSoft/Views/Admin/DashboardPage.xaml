<Page x:Class="ClinicSoft.Views.Admin.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <TextBlock Text="Админ-панель" 
                   FontSize="24" FontWeight="Bold"
                   Foreground="#2E7D32"
                   Margin="0,0,0,24"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Border Background="#E8F5E9" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Записей сегодня" Foreground="#2E7D32"/>
                    <TextBlock x:Name="TodaysAppointments" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Background="#E3F2FD" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="Всего пациентов" Foreground="#1976D2"/>
                    <TextBlock x:Name="TotalPatients" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>