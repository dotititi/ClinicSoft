<Window x:Class="ClinicSoft.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClinicSoft — Авторизация" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        FontFamily="Segoe UI" FontSize="14"
        ResizeMode="NoResize">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="32"
                Margin="32"
                MaxWidth="360" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel>
                <!-- Логотип -->
                <TextBlock Text="ClinicSoft"
                           FontSize="28" FontWeight="Bold"
                           Foreground="#2E7D32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Заголовок -->
                <TextBlock x:Name="Header"
                           Text="Вход в систему"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,16"
                           HorizontalAlignment="Center"/>

                <!-- Поле логина -->
                <Grid Height="40" Width="300" Margin="0,0,0,12">
                    <TextBox x:Name="LoginBox"
                             VerticalContentAlignment="Center"
                             GotFocus="LoginBox_GotFocus"
                             LostFocus="LoginBox_LostFocus"/>
                    <TextBlock x:Name="LoginPlaceholder" 
                               Text="Логин"
                               Foreground="#AAAAAA"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="12,0"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Поле пароля -->
                <Grid Height="40" Width="300" Margin="0,0,0,16">
                    <PasswordBox x:Name="PasswordBox"
                                 VerticalContentAlignment="Center"
                                 GotFocus="PasswordBox_GotFocus"
                                 LostFocus="PasswordBox_LostFocus"/>
                    <TextBlock x:Name="PasswordPlaceholder" 
                               Text="Пароль"
                               Foreground="#AAAAAA"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="12,0"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Ошибка -->
                <TextBlock x:Name="ErrorMessage"
                           Text=""
                           Foreground="#D32F2F"
                           FontSize="12"
                           Margin="0,0,0,16"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>

                <!-- Кнопка -->
                <Button x:Name="ActionButton"
                        Content="Войти"
                        Height="44"
                        Margin="0,0,0,20"
                        Click="ActionButton_Click"/>

                <!-- Переключатель -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ToggleLabel"
                               Text="Нет аккаунта?"
                               Foreground="#666666"/>
                    <Button x:Name="ToggleModeButton"
                            Content="Зарегистрироваться"
                            Background="Transparent"
                            Foreground="#2E7D32"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Padding="4,0,0,0"
                            Margin="4,0,0,0"
                            Click="ToggleModeButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>